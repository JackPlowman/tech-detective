{
  "ruff.configuration": "detector/pyproject.toml",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },

  "python.analysis.inlayHints.pytestParameters": true,
  "files.exclude": {
    ".ruff_cache": true,
    ".pytest_cache": true,
    "**/__pycache__": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true
  }
}
