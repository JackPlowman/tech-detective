{
  "ruff.configuration": "detector/pyproject.toml",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "python.analysis.inlayHints.pytestParameters": true,
  "files.exclude": {
    ".ruff_cache": true,
    ".pytest_cache": true,
    "**/__pycache__": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "pyproject.toml": "__init__.py, poetry.lock, coverage.xml, .coverage, .gitignore",
    "package.json": "package-lock.json, eslint.config.js, astro.config.mjs, .prettierrc.mjs, .gitignore"
  },
  "python.testing.pytestArgs": ["detector"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
