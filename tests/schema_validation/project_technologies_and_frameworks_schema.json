{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "summary": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "technology": {
              "type": "string"
            },
            "count": {
              "type": "integer"
            }
          },
          "required": [
            "technology",
            "count"
          ]
        }
      ]
    },
    "repositories": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "project_name": {
              "type": "string"
            },
            "technologies_and_frameworks": {
              "type": "array",
              "items": {}
            }
          },
          "required": [
            "project_name",
            "technologies_and_frameworks"
          ]
        }
      ]
    }
  },
  "required": [
    "summary",
    "repositories"
  ]
}
